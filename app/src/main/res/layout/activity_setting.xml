<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/act_about_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/holo_black"
    android:orientation="vertical">

    <include
        layout="@layout/cmm_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="56dp"
        android:orientation="vertical">

        <ImageView
            android:layout_width="65dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="29dp"
            android:adjustViewBounds="true"
            android:src="@mipmap/ic_launcher" />

        <TextView
            android:id="@+id/version_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20dp"
            android:text="@null"
            android:textColor="@color/white"
            android:textSize="16sp" />

        <FrameLayout
            android:id="@+id/about_person"
            android:layout_width="match_parent"
            android:layout_height="61.5dp"
            android:layout_marginTop="30dp">

            <View style="@style/line_horizontal" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="31dp"
                android:text="个人信息"
                android:textColor="@color/white"
                android:textSize="16sp" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="12dp"
                android:layout_gravity="right|center_vertical"
                android:layout_marginRight="15dp"
                android:adjustViewBounds="true"
                android:src="@mipmap/ic_next" />


            <View
                style="@style/line_horizontal"
                android:layout_gravity="bottom"
                android:layout_marginLeft="31dp" />

        </FrameLayout>

        <FrameLayout
            android:id="@+id/about_comment"
            android:layout_width="match_parent"
            android:layout_height="61.5dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="31dp"
                android:text="给Fast打分"
                android:textColor="@color/white"
                android:textSize="16sp" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="12dp"
                android:layout_gravity="right|center_vertical"
                android:layout_marginRight="15dp"
                android:adjustViewBounds="true"
                android:src="@mipmap/ic_next" />

            <View
                style="@style/line_horizontal"
                android:layout_gravity="bottom"
                android:layout_marginLeft="31dp" />

        </FrameLayout>


        <FrameLayout
            android:id="@+id/about_connect"
            android:layout_width="match_parent"
            android:layout_height="61.5dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="31dp"
                android:text="关于Fast"
                android:textColor="@color/white"
                android:textSize="16sp" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="12dp"
                android:layout_gravity="right|center_vertical"
                android:layout_marginRight="15dp"
                android:adjustViewBounds="true"
                android:src="@mipmap/ic_next" />

            <View
                style="@style/line_horizontal"
                android:layout_gravity="bottom"
                android:layout_marginLeft="31dp" />

        </FrameLayout>

        <FrameLayout
            android:id="@+id/about_share"
            android:layout_width="match_parent"
            android:layout_height="61.5dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="31dp"
                android:text="推荐给好友"
                android:textColor="@color/white"
                android:textSize="16sp" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="12dp"
                android:layout_gravity="right|center_vertical"
                android:layout_marginRight="15dp"
                android:adjustViewBounds="true"
                android:src="@mipmap/ic_next" />

            <View
                style="@style/line_horizontal"
                android:layout_gravity="bottom" />

        </FrameLayout>

    </LinearLayout>

</FrameLayout>
